{
  // Gestion de l'apsect graphique de la page de supervision
  "Chart": {
    // De combien d'heure en arrière les données du graphique démarrent-elles
    "DisplayLastHours": 3,
    // Facteur affectant la taille de la police dans le graphique
    "FontSizeMultiplier": 2,
    // Intervalle de rafraîchissement de la page du graphique en secondes
    "RefreshIntervalInSeconds": 120,
    // Temperature minimale sur l'axe Y du graphique
    "MinDisplayTemperature": 20,
    // Temperature maximale sur l'axe Y du graphique
    "MaxDisplayTemperature": 35
  },
  // Configuration de la base de données
  "ConnectionStrings": {
    "Default": "Server=127.0.0.1;Database=aquamancy;User=root;Password=admin;"
  },
  // Gestion de l'intégration avec Discord
  "Discord": {
    // Activer/Désactiver les notifications Discord et le service de notification
    "NotificationEnabled": true,
    // URL du webhook Discord pour les notifications (peut être généré depuis les paramètres du serveur Discord)
    "WebhookUrl": "https://discord.com/api/webhooks/TODO",
    // Si une sonde est en alerte, à quelle fréquence (en heures) envoyer une notification de rappel
    "AlertFrequencyInHours": 8,
    // Intervalle en minutes entre chaque passage du service de vérification des temperatures pour envoi de notifications Discord (n'override pas AlertFrequencyInHours)
    "CheckIntervalMinutes": 10
  },
  // Service qui va envoyer des requêtes périodiques à une autre application dans le cloud Azure pour vérifier que l'application tourne
  "DeadManSwitch": {
    // Activer/Désactiver le serice DeadManSwitch (il faut penser à désactiver le pendant côté Azure, ou à defaut juste changer le webhook discord pour ne plus se faire spammer)
    "DeadManSwitchEnabled": true,
    // URL de l'application Azure à pinguer pour vérifier que l'application tourne
    "HealthCheckUrl": "TODO",
    // Nombre d'erreurs consécutives avant de déclencher l'alerte
    "ErrorThreshold": 8,
    // Intervalle entre chaque vérification en minutes
    "CheckIntervalMinutes" : 5
  },
  // Gestion de l'affichage des erreurs sur l'interface graphique
  "ErrorOnGui": {
    // Activer/Désactiver l'affichage des erreurs sur l'interface graphique, utile si l'intégration avec Discord ne marche plus
    "ErrorOnGuiEnabled": true,
    // Temps en minutes avant de retirer les erreurs affichées sur l'interface graphique
    "TimeBeforeClearingErrorsInMinutes": 30
  },
  // Conf de logging standard .NET
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // Conf Kestrel standard .NET
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },
  "AllowedHosts": "*"
}
